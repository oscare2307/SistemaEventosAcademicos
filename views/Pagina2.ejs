        <!-- Vista de Eventos -->
        <div class="container" id="eventsView">
            <div class="mb-4">
                <h2 class="text-center text-primary">Eventos Disponibles</h2>
            </div>
            <div class="row g-4">
                <!-- Generar eventos disponibles -->
                <div class="col-md-4">
                    <div class="card event-card shadow">
                        <div class="card-body">
                            <h5 class="card-title">Evento 1</h5>
                            <p class="card-text text-muted">Fecha: 2024-11-01</p>
                            <p class="card-text text-muted">Ubicación: Sala 101</p>
                            <button class="btn btn-primary w-100" data-bs-toggle="modal" data-bs-target="#event1Modal">Ver Detalles</button>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card event-card shadow">
                        <div class="card-body">
                            <h5 class="card-title">Evento 2</h5>
                            <p class="card-text text-muted">Fecha: 2024-11-02</p>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="../assets/Css/style.css">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>


    <!-- Barra de navegación -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="Pagina2">Sistema Gestión De Eventos</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="Pagina2">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="dashboart">Administración</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="index">Agendar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="asistentes">Asistentes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="contacto">Contacto</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="perfil"><img src="../assets/images/admin.png" width="30" alt="Perfil" class="rounded-circle"></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container my-5">
        <!-- Encabezado con enlace al calendario -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold text-primary">Agenda Tu Encuentro</h2>
            <a href="calendario" class="btn btn-primary">Ver Calendario</a>
        </div>

        <!-- Formulario para añadir o actualizar calendario -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                Añadir/Actualizar Calendario
            </div>
            <div class="card-body">
                <form id="vacaciones-form">
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="text" id="nombre" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="apellido" class="form-label">Apellido</label>
                        <input type="text" id="apellido" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="fecha_inicial" class="form-label">Fecha Inicial</label>
                        <input type="date" id="fecha_inicial" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="fecha_final" class="form-label">Fecha Final</label>
                        <input type="date" id="fecha_final" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="descripcion" class="form-label">Descripción</label>
                        <input type="text" id="descripcion" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="aula" class="form-label">Aula</label>
                        <input type="text" id="aula" class="form-control" required>
                    </div>
                    <input type="hidden" id="vacacion-id">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success">Guardar</button>
                        <button type="reset" class="btn btn-secondary">Limpiar</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Lista de Eventos -->
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                Lista de Eventos
            </div>
            <div class="card-body">
                <ul id="vacaciones-list" class="list-group list-group-flush"></ul>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../assets/Js/script.js"></script>

</body>

</html>



